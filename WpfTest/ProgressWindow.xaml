<Window x:Class="WpfTest.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressWindow" ResizeMode="NoResize" Height="66" Width="363" WindowStyle="None">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" MouseMove="UIElement_OnMouseMove">
        <ProgressBar Name="progressBar" HorizontalAlignment="Left" Height="20" Margin="10,28,0,0" VerticalAlignment="Top" Width="335"/>
        <Label Content="Please wait for clone result... Cloning 20M objects" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="28"/>
    </Grid>
</Window>
